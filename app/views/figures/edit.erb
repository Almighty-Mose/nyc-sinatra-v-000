<h1>Edit A Dope Figure From History</h1>

<form method="post" action="/figures/<%=@figure.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p><label for="name">Name:</label>
    <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></p>

  <h3>Edit Landmarks</h3>
    <ul>
      <% Landmark.all.each do |landmark| %>
        <li><label><%= landmark.name %></label>
        <input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>></li>
      <% end %>
    </ul>

  <h3>Edit Titles</h3>
    <ul>
      <% Title.all.each do |title| %>
        <li><label><%= title.name %></label>
        <input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>></li>
      <% end %>
    </ul>

  <input type="submit" value="Edit Figure">
</form>
